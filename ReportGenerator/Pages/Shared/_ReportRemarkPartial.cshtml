@model string

@if (Model.Length > 0)
{
    <p class="text-danger h4">
        备注：<br />
    </p>
    var remarkList = Model.Split("。", StringSplitOptions.RemoveEmptyEntries);
    <ol class="text-danger">
        @foreach (var li in remarkList)
        {
            <li>@li</li>
        }
    </ol>
    <br />
}
