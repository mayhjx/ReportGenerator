@page
@model ReportGenerator.Pages.QuantitativeReports.IndexModel

@{
    ViewData["Title"] = "列表";
}

<h1>报告列表</h1>

<p>
    <a asp-page="Create">新建</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].Item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].TargetInstrumentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].MatchInstrumentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].Investigator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].InvestigationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].Approver)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].ApprovalDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Report) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TargetInstrumentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatchInstrumentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Investigator)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvestigationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Approver)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApprovalDate)
            </td>
            <td>
                @if (item.Status == "已提交")
                {
                    <a asp-page="./Edit" asp-route-id="@item.ID">编辑</a> <span>|</span>
                    <a asp-page="./Review" asp-route-id="@item.ID">审核</a> <span>|</span>
                }
                <a asp-page="./Details" asp-route-id="@item.ID">预览</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">删除</a>
            </td>
        </tr>
}
    </tbody>
</table>
