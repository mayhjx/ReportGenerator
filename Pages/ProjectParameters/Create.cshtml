@page
@model ReportGenerator.Pages.ProjectParameters.CreateModel

@{
    ViewData["Title"] = "新建";
}

<h1>新建</h1>

<h4>项目参数</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProjectParameter.Name" class="control-label"></label>
                <input asp-for="ProjectParameter.Name" class="form-control" />
                <span asp-validation-for="ProjectParameter.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectParameter.ALE" class="control-label"></label>
                <input asp-for="ProjectParameter.ALE" class="form-control" />
                <span asp-validation-for="ProjectParameter.ALE" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectParameter.Xc1" class="control-label"></label>
                <input asp-for="ProjectParameter.Xc1" class="form-control" />
                <span asp-validation-for="ProjectParameter.Xc1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectParameter.Xc2" class="control-label"></label>
                <input asp-for="ProjectParameter.Xc2" class="form-control" />
                <span asp-validation-for="ProjectParameter.Xc2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectParameter.SignificantDigits" class="control-label"></label>
                <input asp-for="ProjectParameter.SignificantDigits" class="form-control" />
                <span asp-validation-for="ProjectParameter.SignificantDigits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="新建" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">返回</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
